<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    android:background="?android:attr/windowBackground">

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatarView"
            android:src="@drawable/business"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/lender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:text="lender"
            android:layout_toRightOf="@+id/avatarView"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/borrowe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:text="borrower"
            android:layout_toLeftOf="@+id/delete_lend_borrow"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/money_amount"
            android:layout_toLeftOf="@id/delete_lend_borrow"
            android:text="amount"
            android:layout_below="@id/borrowe_name"
            />

        <TextView
            android:id="@+id/remainder_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/delete_lend_borrow"
            android:layout_toRightOf="@+id/avatarView"
            android:text="remainder set at"
            android:layout_below="@id/lender_name"/>

        <TextView
            android:id="@+id/remainder_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@+id/remainder_info"
            android:layout_toRightOf="@+id/avatarView"
            android:maxLines="1"
            />
        <ImageView
            android:id="@+id/delete_lend_borrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            android:layout_toLeftOf="@+id/delete_lend_borrow"
            android:layout_toRightOf="@id/avatarView"
            android:layout_below="@+id/remainder_description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:layout_toLeftOf="@id/delete_lend_borrow"
            android:layout_toRightOf="@+id/avatarView"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_light"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/line"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>