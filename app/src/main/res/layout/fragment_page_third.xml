<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0B2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/informer_header"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:id="@+id/back_circle"
            android:src="@drawable/back_red_circle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="156dp"
            android:id="@+id/save_memo_screen"
            android:src="@drawable/memo_save_screen"
            android:layout_alignTop="@+id/back_circle"
            android:layout_alignLeft="@+id/back_circle"/>
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/save_bill_snap_screen"
            android:layout_alignRight="@+id/back_circle"
            android:layout_alignBottom="@+id/back_circle"
            android:src="@drawable/bill_snap_save_screen" />
        <ImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:id="@+id/notebook_girl_back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back_girl_notebook"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informer_header"
        android:layout_above="@+id/informer_textview"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="Save Transactions, earnings\n and bill snaps..."
        android:textSize="24sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informer_textview"
        android:layout_above="@+id/skip_view"
        android:text="save your transactions, bill snaps, \nearnings, set reminders\n save lending and borrowing information and more...."
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <View
        android:id="@+id/skip_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
