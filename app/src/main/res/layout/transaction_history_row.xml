<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="5dp"
    android:background="?android:attr/windowBackground">

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatarView"
            android:src="@drawable/business"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/item_name"
            android:layout_toRightOf="@+id/avatarView"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/avatarView"
            android:layout_below="@+id/item_name"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="movies Expenses"/>
        <TextView
            android:id="@+id/transaction_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/options_layout"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:text="@string/item_cost"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/options_layout"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/Date"/>
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/transaction_type"
            android:layout_toRightOf="@+id/avatarView"
            android:layout_toLeftOf="@+id/options_layout"
            android:ellipsize="end"
            android:maxLines="1"/>
        <LinearLayout
            android:id="@+id/options_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_collections_black_24dp"
                android:id="@+id/reciept_attachment"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/delete_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_delete_black_24dp"/>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            android:layout_toLeftOf="@+id/options_layout"
            android:layout_toRightOf="@+id/avatarView"
            android:layout_below="@+id/item_description"
            />
        <TextView
            android:id="@+id/modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:textColor="@android:color/holo_blue_light"
            android:layout_toLeftOf="@+id/options_layout"
            android:layout_toRightOf="@+id/avatarView"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/line"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>